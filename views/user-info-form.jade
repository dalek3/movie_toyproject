extends layout

block content
		//usernav.jade include
		include usernav
		// Modal
		#changeModal.modal.fade
			.modal-dialog.etc
				.modal-content
					.modal-body
						h4
							b 비밀번호 변경
							hr
						form.form-horizontal(action='/user/#{username}/change', method='post')
							label new Password
							input#password.form-control(name='new' type='password', placeholder='Password')
							label new Password confirm
							input#password.form-control(name='confirm' type='password', placeholder='Password')
							.footer
								button.btn.btn-primary(type='submit') change
		#withdrawModal.modal.fade
				.modal-dialog.etc
					.modal-content
						.modal-body
							h4
								b 회원탈퇴
								hr
								form.form-horizontal(action='/user/#{username}/withdrawal', method='post')
									h2 탈퇴하시겠습니까?
									.footer
										button.btn(type='submit') yes

		#myModal.modal.fade
			.modal-dialog
				.modal-content

		.header
			h2.modal-title My Information
			hr
		.body
			ul.content
				li
					h4 My ID : #{username}
				li
					a(href='#' data-toggle='modal' data-target='#changeModal') 비밀번호 변경
				li
					a(href='#' data-toggle='modal' data-target='#withdrawModal') 탈퇴
					hr
				li
					h4 My favoratie movie
					hr
				li
					each movie in result
						a(href='../../movie/#{movie.movieurl}' data-toggle='modal' data-target='#myModal')
							|#{movie.moviename}<br>